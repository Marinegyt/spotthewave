.feed {
  padding:12px 0;
}

.feed-wrapper {
  margin-top: -20px;
  padding-bottom: 80px;
}


.feed-cards {
  display: flex;
  flex-direction: column;
  gap: 16px;
  position:relative;
  z-index: 1;

  .review-description a {
    color: $blue-800 !important;
  }
}

.feed-cards:before {
  content: '';
  width:1px;
  background:$blue-500;
  height:100%;
  position:absolute;
  left:20px;
  z-index: -1;
}

.feed-card {
  display:flex;
  gap: 12px;

  .avatar {
    border:4px solid $light-beige;
  }
}

.feed-rating-stars i{
  font-size:10px !important;
}

.new-photo {
 border-radius: $border-radius-lg;
}

.feed-rating {
  border: 2px solid $blue-200;
  padding: 10px;
  border-radius: 8px;
  background:$white;
}

.feed-like-button {
  font-size:14px;
  letter-spacing: 1px;
  color:$blue-600;
  font-weight: bold;
  color:$orange;
  a {
    color: $orange !important;
  }
}

.banner-feed {
  background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(<%= asset_path "Banner.png" %>);
  height: 240px;
  margin: 0px;
  padding: 0px;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  color: white;
  text-shadow: 2px 2px $blue-600;
  background-position: center;
}

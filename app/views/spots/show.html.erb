<div class="spot mb-3 position-relative">
  <%= link_to :back, class:'back-button' do %>
    <%= image_tag('icons/back.svg')%>
    <span>Retour</span>
  <% end %>
  <%= cl_image_tag @spot.photo.key, class:'spot-photo' %>
  <div class="spot-body d-flex flex-column">

    <% if @bookmark %>
      <%= link_to spot_bookmark_path(@spot, @bookmark), data: {turbo_method: :delete}, class: "favorite-button" do %>
        <%= image_tag('icons/heart.svg') %>
      <% end %>
    <% else %>
    <%# data controller action à inserer sur le form, data action sur le button : prevent default
    recuperer url (set timeout), execute l'action que dans 5 sec + fecth %>
      <%= form_with(url: spot_bookmarks_path(@spot), method: :post) do |f| %>
        <button type= "submit" class="favorite-button">
          <%= image_tag('icons/heart.svg') %>
        </button>
      <% end %>
    <% end %>

    <div class="d-flex justify-content-between">
      <h3><%=@spot.name%></h3>
      <div class="d-flex align-items-center">
        <p class="mx-1"><strong><%=@average_rating%> <i class="fa-solid fa-star" style="color: #FFD43B;"></i></strong></p>
      </div>
    </div>
      <p class="mb-3 text-blue-600"><%=@spot.address%></p>
      <p class="mb-4"><%=@spot.description%></p>
    <div class="d-flex justify-content-between">
    <div class="d-flex flex-column gap-2">
      <p class="overtitre text-blue-600" >DISTANCE</p>
      <p><%=@distance_from_spot%>km</p>

    </div>
    <div>
       <div class="d-flex flex-column gap-2">
      <p class="overtitre text-blue-600" >DIFFICULTÉ</p>
      <p class="overtitre"><%=@average_difficulty%></p>
      </div>
    </div>
    </div>
  </div>
</div>
<div class="spot-details" data-controller="show-spot-weather" data-controller="tabs">
  <div class="d-flex justify-content-between py-3">
    <h3>Conditions</h3>
    <p data-action="click->show-spot-weather#showWeather">Tout voir</p>
  </div>
  <div class="spot-details-weather-cards">
    <div class="card-category">
      <%= image_tag('icons/sun.svg') %>
      <h4>18°</h4>
    </div>
    <div class="card-category">
      <%= image_tag('icons/direction.svg') %>
      <h4>25km/h</h4>
      <p>N-NW</p>
    </div>
    <div class="card-category">
      <%= image_tag('icons/wave.svg') %>
      <h4>1,5m</h4>
    </div>
  </div>
  <%= render "weather_data" %>
</div>

<div class="container" data-controller="tabs">
  <ul class="list-inline tabs-underlined mt-5">
    <li>
      <a data-action="click->tabs#switchTab" data-tab="avis" class="tab-underlined active">Avis</a>
    </li>
    <li>
      <a data-action="click->tabs#switchTab" data-tab="photos" class="tab-underlined">Photos</a>
    </li>
    <li>
      <a data-action="click->tabs#switchTab" data-tab="communaute" class="tab-underlined">Communauté</a>
    </li>
  </ul>

  <div id="avis" class="tab-content active" data-tabs-target="content" data-content="avis">
    <% @spot.reviews.each do |review| %>
      <%= render "reviews/review_card", review: review %>
    <% end%>
    <% if @user_review %>
      <p>Vous avez déjà laissé une évaluation pour ce spot.</p>
    <% else %>
      <h3>Nouvelle Évaluation :</h3>
      <%= render "reviews/review_form", review: @review,  spot: @spot%>
    <% end %>
  </div>

  <div id="photos" class="tab-content d-none" data-tabs-target="content" data-content="photos">
    <h2>Ici il y aura des photos</h2>
    <!-- Contenu de l'onglet "Photos" -->
    <!-- Mettez le contenu de l'onglet "Photos" ici -->
  </div>

  <div id="communaute" class="tab-content d-none" data-tabs-target="content" data-content="communaute">
    <h2>Ici il y aura un feed</h2>
    <!-- Contenu de l'onglet "Communauté" -->
    <!-- Mettez le contenu de l'onglet "Communauté" ici -->
  </div>
</div>
